@model Order

@{
    ViewBag.Title = "Information about your purchase";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />
<h3 class="text-center">Delivery to adress</h3>

<div class="">
    <h3 class="text-center">Add an adress</h3>
    <form asp-controller="Cart" asp-action="Order" method="post">
        <div class="mb-3" >
            <label asp-for="@Model.FirstName" class="form-label">Name</label>
            <input asp-for="@Model.FirstName" class="form-control" aria-required="true" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.LastName" class="form-label">Last Name</label>
            <input asp-for="@Model.LastName" class="form-control" aria-required="true" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Address" class="form-label">Address</label>
            <input asp-for="@Model.Address" class="form-control" aria-required="true" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.City" class="form-label">City Or Village</label>
            <input asp-for="@Model.City" class="form-control" aria-required="true" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.PostalCode" class="form-label">PostalCode</label>
            <input asp-for="@Model.PostalCode" class="form-control" value="" />
            <span asp-validation-for="PostalCode" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Country" class="form-label">Country</label>
            <input asp-for="@Model.Country" class="form-control" value="" />
            <span asp-validation-for="Country" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Card" class="form-label">Credit Or Debit Card Number</label>
            <input asp-for="@Model.Card" class="form-control" value="" />
            <span asp-validation-for="Card" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.PhoneNumber" class="form-label">Phone Number</label>
            <input asp-for="@Model.PhoneNumber" class="form-control" value="" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
            <button type="submit" class="btn btn-primary">Next</button>
    </form>
</div>


