@model List<ProductViewModel>

@{
    ViewBag.Title = "Your shopping cart";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">
    @foreach (var product in Model)
    {
        <partial name="/Views/Cart/PartialViews/_CartItemPartial.cshtml" model="product"/>
    }
</div>
<br />
<div class="text-center ">
    <a asp-controller="Cart" asp-action="Information" class="btn btn-primary p-1 fs-1" style="width: 10%">Buy</a>
</div>
