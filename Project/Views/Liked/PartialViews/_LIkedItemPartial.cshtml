@model ProductViewModel
@using Project.Data.Models

<div class="col-4" style="width: 20rem; ">
    <a asp-controller="Products" asp-action="Product" asp-route-productId="@Model.Id"></><img class="card-img-top" style="width: 18rem;" src="@Model.ImageUrl" alt="Product Image"></a>
    <div class="card-body">
        <h5 class="card-title mt-1">@Model.Name</h5>
        <div>
               <form class="input-group-sm" asp-controller="Liked" asp-action="Delete" asp-route-productId="@Model.Id">
                   <button class="btn btn-outline-none m-0 p-0 mb-1" type="submit"><img class="m-0 p-0" src="~/bin.png" width="24px"></img></button>
            </form> 
        </div>
    </div>
</div>